
@page
@model EmployeeCRUDApp.Pages.Projects.AddModel
@{
}
<form method="post">
    <h4> Add New Project </h4>
    <div class="row">
        
        <div class="form-group">
        <label asp-for="@Model.p_name"></label>
        <input type="text" class="form-control" asp-for="@Model.p_name" />
        </div>
      
        <div class="form-group">
        <label asp-for="@Model.startdate"></label>
        <input type="date" class="form-control" asp-for="@Model.startdate" />
    </div>
     
       
    
    <div class="form-group">
        <label asp-for="@Model.enddate"></label>
        <input type="date" class="form-control" asp-for="@Model.enddate" />
        </div>
     
   
       
   
   

    <div class="form-group">
        <button type="submit" class="btn btn-primary ">Submit</button>
        <a href="/Projects/List" class="btn btn-primary col-sm-3" role="button">Back</a>
    </div>
    </div>

    <div class="form-group">
        <h5 class="text-success">@Model.SuccessMessage</h5>
        <h5 class="text-danger">@Model.ErrorMessage</h5>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>

    </div>
    </div>
</form>