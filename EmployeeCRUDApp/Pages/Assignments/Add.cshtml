
@page
@model EmployeeCRUDApp.Pages.Assignments.AddModel
@{
}
<form method="post">
    <h4> Add New Assignment </h4>
   
    <div class="form-group">
        <label asp-for="@Model.SelectEmployeeId"></label>
        <select asp-for="@Model.SelectEmployeeId" asp-items="@Model.EmployeeList" class="form-select"></select>
        </div>
    <div class="form-group">
        <label asp-for="@Model.SelectProjectId"></label>
        <select asp-for="@Model.SelectProjectId" asp-items="@Model.ProjectList" class="form-select"></select>
        </div>
    

        <div class="form-group">
        <label asp-for="@Model.startdate"></label>
        <input type="date" class="form-control" asp-for="@Model.startdate" />
    </div>

   
     
    <div class="form-group">
        <label asp-for="@Model.enddate"></label>
        <input type="date" class="form-control" asp-for="@Model.enddate" />
        </div>
   
       
   
   

    <div class="form-group">
        <button type="submit" class="btn btn-primary ">Submit</button>
        <a href="/Assignments/List" class="btn btn-primary col-sm-3" role="button">Back</a>
    </div>

    <div class="form-group">
        <h5 class="text-success">@Model.SuccessMessage</h5>
        <h5 class="text-success">@Model.ErrorMessage</h5>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>

    </div>
</form>