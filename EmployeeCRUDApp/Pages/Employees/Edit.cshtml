@page "{id}"
@model EmployeeCRUDApp.Pages.Employees.EditModel
@{
}
<h3>Employees to Edit @Model.Id</h3>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name>" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Gender"></label>
        <input asp-for="@Model.Gender>" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Dob"></label>
        <input asp-for="@Model.Dob>" class="form-control"/>
        <div class="form-group">
        <label asp-for="@Model.Phonenumber"></label>
        <input asp-for="@Model.Phonenumber>" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Pincode"></label>
        <input asp-for="@Model.Pincode>" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address"></label>
        <input asp-for="@Model.Address>" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.City"></label>
        <input asp-for="@Model.City>" class="form-control"/>
    </div>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Employees/ListPage" class="btn btn-light" role="button">Cancel</a>
    </div>
</form>