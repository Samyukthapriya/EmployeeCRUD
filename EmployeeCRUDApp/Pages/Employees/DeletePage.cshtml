@page "{id}"
@model EmployeeCRUDApp.Pages.Employees.DeleteModel
@{
}

<h3>Delete Employee (@Model.Id)</h3>
<br/>
<form method="post" class="text-center">
    <div class="form-group">
        <h5>Are you sure you want to Delete Employee - @Model.Name ?</h5>
    </div>
     <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
    </div>
     <div>
        @if (Model.ShowButton)
        {
            <button type="submit" class="btn btn-danger col-sm-2">Delete</button>        
            <a href="/Employees/DeletePage" class="btn btn-light col-sm-2" role="button">Cancel</a>
        }
        else
        {
            <a href="/Employees/ListPage" class="btn btn-primary col-sm-3" role="button">Back</a>
        }
    </div>
</form>